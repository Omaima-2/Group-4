rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /Client/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth.uid == resource.data.phone_number;
      allow write: if request.auth.uid == resource.data.phone_number;
      allow delete: if request.auth.uid == resource.data.phone_number;
    }

    match /ServiceProvider/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth.uid == resource.data.phone_number;
      allow write: if request.auth.uid == resource.data.phone_number;
      allow delete: if request.auth.uid == resource.data.phone_number;
    }

    match /Admin/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if false;
      allow delete: if false;
    }
  }
}
